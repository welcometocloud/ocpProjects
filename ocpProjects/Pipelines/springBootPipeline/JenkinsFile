pipeline {

    agent any

    stages {
        stage('git checkout') {
            steps {

                git 'https://github.com/devfile-samples/devfile-sample-java-springboot-basic.git'
            }
        }
        stage('OcpLogin') {
            steps {
                sh '''
                    oc login https://console-openshift-console.apps.east-cluster.multicloudverse.com -u kubeadmin -p ByG4b-brDTX-zveor-mkkDp
                    oc new-project adarsh-project
                '''
            }

        }
        stage('Deploy to OCP') {
            steps {
                sh '''
                oc new-app https://github.com/devfile-samples/devfile-sample-java-springboot-basic.git#main 
                '''
            }
        }
    }
}